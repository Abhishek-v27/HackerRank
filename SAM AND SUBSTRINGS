#define MOD 1000000007

long long substrings(char* n) {
    long long total = 0;
    // 'prev' stores the sum of all substrings ending at the current index 'i'.
    long long prev = 0; 
    int len = strlen(n);
    
    for (int i = 0; i < len; i++) {
        int digit = n[i] - '0';
        
        
        prev = (prev * 10 + (long long)digit * (i + 1)) % MOD; 
        total = (total + prev) % MOD;
    }
    return total;
}
